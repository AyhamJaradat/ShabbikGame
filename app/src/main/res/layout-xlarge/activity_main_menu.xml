<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/bg"
    android:gravity="center_horizontal|center_vertical|clip_vertical"
    android:orientation="vertical">

<!--    <com.google.android.gms.ads.AdView-->
<!--        android:id="@+id/banner_ad"-->
<!--        android:layout_alignParentTop="true"-->
<!--        android:layout_gravity="top"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        ads:adSize="BANNER"-->
<!--        ads:adUnitId="@string/main_activity_top_banner" />-->

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="428dp"
        android:layout_height="370dp"
        android:layout_weight="1.71"
        android:src="@drawable/header" />

    <LinearLayout
        android:layout_width="706dp"
        android:layout_height="687dp"
        android:background="@drawable/buttons_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/playWordGameImageView"
            android:layout_width="600dip"
            android:layout_height="120dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dip"
            android:src="@drawable/kalemat_button_selector" />

        <ImageView
            android:id="@+id/playSentenceGameImageView"
            android:layout_width="600dip"
            android:layout_height="120dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dip"
            android:src="@drawable/jomal_button_effect" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/challengeImageView"
                android:layout_width="600dip"
                android:layout_height="120dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dip"
                android:src="@drawable/tahdyat_effect" />

            <TextView
                android:id="@+id/textViewForNumberOfChallenges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="35dp"
                android:text="15"
                android:textColor="@android:color/white"
                android:textSize="22sp" />
        </FrameLayout>

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="600dip"
            android:layout_height="120dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dip"
            android:src="@drawable/malafi_effect" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.71"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.71"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>