    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:background="@drawable/header"
            android:scaleType="center" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/imagegametype"
            android:layout_width="340dp"
            android:layout_height="120dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/trainImageView"
            android:layout_width="600dip"
            android:layout_height="120dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dip"
            android:background="@drawable/tadreb_button_behavior" />

        <ImageView
            android:id="@+id/playWithFBUserImageView"
            android:layout_width="600dip"
            android:layout_height="120dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dip"
            android:background="@drawable/thada_sadek_behavior" />

        <ImageView
            android:id="@+id/playWithRandomUserImageView"
            android:layout_width="600dip"
            android:layout_height="120dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dip"
            android:background="@drawable/ta7ade_ashwa2e_behavior" />

    </LinearLayout>

</RelativeLayout>