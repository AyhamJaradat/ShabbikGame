<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pause_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tawakof_popup"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingRight="10dip"
            android:paddingLeft="10dip">

            <ImageView
                android:id="@+id/ens7ab_button"
                android:layout_width="280dip"
                android:layout_height="120dip"
                android:layout_margin="10dp"
                android:background="@drawable/button_ensehab_selector" />

            <ImageView
                android:id="@+id/start_button"
                android:layout_width="280dip"
                android:layout_height="120dip"
                android:layout_margin="10dp"
                android:background="@drawable/este2naf_button_selector"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>