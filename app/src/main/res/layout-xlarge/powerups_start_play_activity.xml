<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/power_up_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="665dp"
        android:layout_height="120dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="230dip"
        android:background="@drawable/rased_bg">

        <TextView
            android:id="@+id/coin_score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="180dip"
            android:gravity="center_vertical"
            android:text="12"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="55sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/powersLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/charcter_button_dim"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.19"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- <ImageView -->
        <!-- android:id="@+id/imageView1" -->
        <!-- android:layout_width="40dp" -->
        <!-- android:layout_height="40dp" -->
        <!-- android:layout_weight="0.06" -->
        <!-- android:src="@drawable/freeze" /> -->


        <!-- <ImageView -->
        <!-- android:id="@+id/imageView2" -->
        <!-- android:layout_width="40dp" -->
        <!-- android:layout_height="40dp" -->
        <!-- android:layout_weight="0.06" -->
        <!-- android:src="@drawable/hint" /> -->


        <!-- <ImageView -->
        <!-- android:id="@+id/imageView3" -->
        <!-- android:layout_width="40dp" -->
        <!-- android:layout_height="40dp" -->
        <!-- android:layout_weight="0.02" -->
        <!-- android:src="@drawable/re" /> -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/charcter_button_dim"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="60dip"
        android:layout_marginTop="60dip"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/kashf_horof"
            android:layout_width="400dip"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="5dip"
            android:src="@drawable/text_re" />

        <ImageView
            android:id="@+id/re_button"
            android:layout_width="@dimen/charcter_button_dim"
            android:layout_height="@dimen/charcter_button_dim"
            android:layout_gravity="right"
            android:layout_marginLeft="20dip"
            android:src="@drawable/re_button_behavior" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/charcter_button_dim"
        android:layout_gravity="right"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="60dip"
        android:layout_marginTop="15dip"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="257dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="5dip"
            android:gravity="right"
            android:src="@drawable/text_freeze" />

        <ImageView
            android:id="@+id/freez_button"
            android:layout_width="@dimen/charcter_button_dim"
            android:layout_height="@dimen/charcter_button_dim"
            android:layout_gravity="right"
            android:layout_marginLeft="20dip"
            android:gravity="right"
            android:src="@drawable/freeze_button_test" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/charcter_button_dim"
        android:layout_gravity="right"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="60dip"
        android:layout_marginTop="15dip"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="150dip"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="5dip"
            android:gravity="right"
            android:src="@drawable/text_hint" />

        <ImageView
            android:id="@+id/hint_button"
            android:layout_width="@dimen/charcter_button_dim"
            android:layout_height="@dimen/charcter_button_dim"
            android:layout_gravity="right"
            android:layout_marginLeft="20dip"
            android:gravity="right"
            android:src="@drawable/hint_button_behavior" />
    </LinearLayout>

    <ImageView
        android:id="@+id/start_button"
        android:layout_width="510dp"
        android:layout_height="110dip"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dip"
        android:src="@drawable/play_button_selector" />

</LinearLayout>